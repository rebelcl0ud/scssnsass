}

.header {
  background: cyan;
  font-family: $main-font;
  ul {
    padding: 0;
    margin: 0;
    li {
      display: inline-block;
      list-style: none;
      padding: 20px 10px;
    }
  }
}

.container {
  margin: 0 auto;
  &:after {
    clear: both;
    content: "";
    display: table;
  }
}
article {
  width: 1000px / 1250px * 100%;
  display: inline-block;
  float: left;
  padding: 15px 20px;
}

aside {
  width: 200px / 1000px * 100%;
  display: inline-block;
  padding: 10px;
  img {
    width: 100%;
  }
}

.btn {
  padding: 10px 15px;
  border-radius: 5px;
  display: inline-block;
  margin: 0 auto;
  &.primary {
   background: blue;
  }
  &.danger {
   background: red;
  }
  &.success {
   background: green;
  }
  &.warning {
   background: yellow;
  }
}

